<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Form</title>
    <link rel="stylesheet" href="/styles/index.css" type="text/css" >
</head>
<body>
    <div class="signup-container">
        <h2>Create Your Account</h2>
        <% if (errors.length > 0) { %>
            <div class="error-messages">
                <ul>
                    <% errors.forEach(function(error) { %>
                        <li><%= error.msg %></li>
                    <% }); %>
                </ul>
            </div>
        <% } %>

        <% if (successMessage) { %>
            <div class="messages success-messages">
                <p><%= successMessage %></p>
            </div>
        <% } %>
        <form action="/b/signup" method="POST">
            <div class="form-group">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" value="<%= formData ? formData.firstName : '' %>" required>
            </div>

            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" value="<%= formData ? formData.lastName : '' %>" required>
            </div>

            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" value="<%= formData ? formData.username : '' %>" readonly>
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= formData ? formData.email : '' %>" required>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>

            <button type="submit" class="btn">Sign Up</button>
        </form>
    </div>

    <script>
        document.getElementById('firstName').addEventListener('input', generateUsername);
        document.getElementById('lastName').addEventListener('input', generateUsername);

        function generateUsername() {
            const firstName = document.getElementById('firstName').value.trim().toLowerCase();
            const lastName = document.getElementById('lastName').value.trim().toLowerCase();
            document.getElementById('username').value = firstName + lastName;
        }
    </script>
</body>
</html>
